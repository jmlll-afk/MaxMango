<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaxMango.Views.AddInventoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="nameEntry" Placeholder="Enter Inventory Name" />
            <Entry x:Name="descriptionEntry" Placeholder="Description" />
            <Entry x:Name="quantityEntry" Placeholder="Quantity"/>
            <Button Text="Add Menu" Clicked="OnButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>